<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/surfaceimage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_picker_desc"
        android:scaleType="fitCenter" />

    <SeekBar
        android:id="@+id/cb_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/translucentgrey" />

    <TextView
        android:id="@+id/textcb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cb_bar"
        android:layout_alignParentLeft="true"
        android:text="@string/btn_color_balance"
        android:background="@color/translucentgrey" />

</RelativeLayout>