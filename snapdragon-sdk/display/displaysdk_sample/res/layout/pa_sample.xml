<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svi"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/surfaceimage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_picker_desc"
        android:scaleType="fitCenter" />

    <CheckBox
        android:id="@+id/pa_checkbox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pa_desaturation_checkbox"
        android:layout_alignParentLeft="true"
        android:background="@color/translucentgrey"
        android:text="@string/pa_enable" />

    <CheckBox
        android:id="@+id/pa_desaturation_checkbox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_sat_threshold_pa"
        android:layout_alignParentLeft="true"
        android:background="@color/translucentgrey"
        android:text="@string/pa_desaturation_enable" />

    <TextView
        android:id="@+id/text_sat_threshold_pa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pa_sat_threshold_bar"
        android:layout_alignParentLeft="true"
        android:text="@string/pa_sat_thresh"
        android:background="@color/translucentgrey" />

    <SeekBar
        android:id="@+id/pa_sat_threshold_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_hue_pa"
        android:layout_alignParentLeft="true"
        android:background="@color/translucentgrey" />

    <TextView
        android:id="@+id/text_hue_pa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pa_hue_bar"
        android:layout_alignParentLeft="true"
        android:text="@string/pa_hue"
        android:background="@color/translucentgrey" />

    <SeekBar
        android:id="@+id/pa_hue_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_saturation_pa"
        android:layout_alignParentLeft="true"
        android:background="@color/translucentgrey" />

    <TextView
        android:id="@+id/text_saturation_pa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pa_saturation_bar"
        android:layout_alignParentLeft="true"
        android:text="@string/pa_saturation"
        android:background="@color/translucentgrey" />

    <SeekBar
        android:id="@+id/pa_saturation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_intensity_pa"
        android:layout_alignParentLeft="true"
        android:background="@color/translucentgrey" />

    <TextView
        android:id="@+id/text_intensity_pa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pa_intensity_bar"
        android:layout_alignParentLeft="true"
        android:text="@string/pa_intensity"
        android:background="@color/translucentgrey" />

    <SeekBar
        android:id="@+id/pa_intensity_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_contrast_pa"
        android:layout_alignParentLeft="true"
        android:background="@color/translucentgrey" />

    <TextView
        android:id="@+id/text_contrast_pa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pa_contrast_bar"
        android:layout_alignParentLeft="true"
        android:text="@string/pa_contrast"
        android:background="@color/translucentgrey" />

    <SeekBar
        android:id="@+id/pa_contrast_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/translucentgrey" />

</RelativeLayout>