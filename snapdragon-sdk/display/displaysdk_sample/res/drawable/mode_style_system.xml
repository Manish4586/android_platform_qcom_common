<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="5dp" android:color="#FFFFFF" />

            <corners android:radius="4dp" />

            <gradient android:startColor="#99ADC2" android:endColor="#000000"/>
        </shape></item>
    <item android:state_selected="true"><shape android:shape="rectangle">
            <stroke android:width="5dp" android:color="#66FF66" />

            <corners android:radius="4dp" />

            <solid android:color="#FFFFFF" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="5dp" android:color="#000000" />

            <corners android:radius="8dp" />

            <gradient android:startColor="#248FB2" android:endColor="#EBFAFF" android:angle="90"/>
        </shape></item>

</selector>