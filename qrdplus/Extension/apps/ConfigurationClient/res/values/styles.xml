<resources>
    <style name="TextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHighlight">#FFFF9200</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">#5C5CFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.SearchResult">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
    </style>

    <style name="TextAppearance.SearchResult.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SearchResult.Subtitle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="MmsHoloTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    </style>

    <style name="PreferenceLightAlertDialog" parent="@*android:style/Theme.Holo.Light.Dialog.Alert">
        <item name="android:actionModeCloseButtonStyle">@*android:style/Widget.Holo.ActionButton.CloseMode</item>
        <item name="android:actionModeCloseDrawable">@*android:drawable/ic_cab_done_holo_dark</item>
        <item name="android:actionModeBackground">@*android:drawable/cab_background_top_holo_dark</item>
    </style>

    <style name="MmsPreferenceHoloTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:alertDialogTheme">@style/PreferenceLightAlertDialog</item>
    </style>

</resources>
