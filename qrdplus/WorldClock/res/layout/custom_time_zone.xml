<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/custom_time_zone"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
          android:id="@+id/label_city"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/label_city"
          android:paddingStart="5dp"
          android:paddingEnd="10dp"
      />
      <EditText
          android:id="@+id/et_city"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:paddingEnd="5dp"
          android:hint="@string/hint_city"
          android:singleLine="true"
      />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
          android:id="@+id/label_gmt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/label_gmt"
          android:paddingStart="5dp"
          android:paddingEnd="5dp"
      />
      <Button
          android:id="@+id/btn_gmt_sign"
          android:layout_width="35dp"
          android:layout_height="wrap_content"
          android:paddingEnd="5dp"
          android:textSize="20sp"
          android:text="@string/sign_pos"
      />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/hour_label"
      />
      <EditText
          android:id="@+id/et_gmt_hour"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:paddingEnd="5dp"
          android:inputType="number"
          android:text="@string/default_hour"
      />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/minute_label"
      />
      <EditText
          android:id="@+id/et_gmt_minute"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:paddingEnd="5dp"
          android:inputType="number"
          android:text="@string/default_minute"
      />
  </LinearLayout>
</LinearLayout>
