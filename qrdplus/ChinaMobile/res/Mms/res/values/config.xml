<resources>
    <!-- configuration for filtering illegal character in address -->
    <bool name="config_filter_char_address">true</bool>

    <!-- configuration for retry immediately when send MMS failed -->
    <bool name="config_retry_immediately">true</bool>

    <!-- configuration for reconnect data call immediately -->
    <bool name="config_reconnect">true</bool>

    <!-- configuration for prompt dialog for wap push link -->
    <bool name="config_wap_push">true</bool>

    <!-- configuration for max slide num -->
    <integer name="max_slide_num">20</integer>

    <!-- configuration for add vCard to MMS -->
    <bool name="config_vcard">true</bool>

    <!-- configuration for add multiple attachment -->
    <bool name="config_show_attach_icon_always">true</bool>

    <!-- configuration for forwarding conversaction -->
    <bool name="config_forwardconv">true</bool>
    <!-- configuration for showing messages by mailbox -->
    <bool name="config_mailbox_enable">true</bool>
    <!-- configuration for classify search -->
    <bool name="config_classify_search">true</bool>

    <!-- configuration for max sms message count -->
    <integer name="max_sms_message_count">2000</integer>

    <!-- configuration for enter key as send -->
    <bool name="config_enter_key_as_send">false</bool>

    <!-- configuration for limit count -->
    <integer name="limit_count">10</integer>

    <!-- configuration for slide text limit size -->
    <integer name="slide_text_limit_size">3000</integer>

    <!-- configuration for prefer save location -->
    <bool name="config_savelocation">true</bool>

    <!-- configuration for max sms to mms message count -->
    <integer name="config_max_smstomms">10</integer>

    <bool name="config_manual_resend">true</bool>
    <bool name="config_retry_always">true</bool>

    <integer name="wap_push_address_index">0</integer>

    <!-- configuration for toast during retry -->
    <bool name="config_mms_retry_toast">true</bool>

    <!-- configuration for retry scheme of sent failed message -->
    <integer-array name="retry_scheme">
        <item>0</item>
        <item>5000</item>
        <item>60000</item>
        <item>300000</item>
        <item>600000</item>
        <item>1800000</item>
    </integer-array>
</resources>
