<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/userCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_small"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_marginTop="@dimen/padding_small"
            android:text="@string/group_user_count"
            android:textColor="@color/group_chat_detail_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:background="@color/text_shadow_color_light_bold" />

        <com.suntek.mway.rcs.nativeui.ui.RcsGroupChatDetailMemberListView
            android:id="@+id/member_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_marginTop="@dimen/padding_small"
            android:numColumns="4"
            android:verticalSpacing="@dimen/padding_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_marginTop="@dimen/padding_small"
            android:background="@color/text_shadow_color_light_bold" />

        <TextView
            android:id="@+id/groupMemberSendSMS"
            style="@style/rcs_list_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:text="@string/sms_group_sends"
            android:textColor="@color/group_chat_detail_text"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:background="@color/text_shadow_color_light" />

        <RelativeLayout
            android:id="@+id/updateSubject"
            style="@style/rcs_list_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small" >

            <TextView
                android:id="@+id/subjectLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:text="@string/group_chat_subject"
                android:textColor="@color/group_chat_detail_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/subjectLabel"
                android:gravity="right"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/group_chat_detail_text_value" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:background="@color/text_shadow_color_light" />

        <RelativeLayout
            style="@style/rcs_list_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/group_chat_id"
                android:textColor="@color/group_chat_detail_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/groupId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/group_chat_detail_text_value" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:background="@color/text_shadow_color_light" />

        <RelativeLayout
            style="@style/rcs_list_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/group_chat_capasity"
                android:textColor="@color/group_chat_detail_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/groupCapasity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/group_chat_detail_text_value" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:background="@color/text_shadow_color_light" />

        <RelativeLayout
            android:id="@+id/ehancedScreen"
            style="@style/rcs_list_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/enhanced_screen"
                android:textColor="@color/group_chat_detail_text"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:background="@color/text_shadow_color_light" />

        <RelativeLayout
            android:id="@+id/changeGroupChairman"
            style="@style/rcs_list_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/change_group_chairman"
                android:textColor="@color/group_chat_detail_text"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_marginTop="16dp"
            android:background="@color/text_shadow_color_light_bold" />

        <RelativeLayout
            android:id="@+id/setMyAlias"
            style="@style/rcs_list_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/my_alias"
                android:textColor="@color/group_chat_detail_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/my_alias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/group_chat_detail_text_value" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:background="@color/text_shadow_color_light" />

        <RelativeLayout
            android:id="@+id/setGroupRemark"
            style="@style/rcs_list_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small" >

            <TextView
                android:id="@+id/group_remark_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:text="@string/group_remark"
                android:textColor="@color/group_chat_detail_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/group_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/group_remark_label"
                android:gravity="right"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/group_chat_detail_text_value" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:background="@color/text_shadow_color_light" />

        <RelativeLayout
            android:id="@+id/setGroupChatNotify"
            style="@style/rcs_list_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/set_group_chat_notify"
                android:textColor="@color/group_chat_detail_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/notify_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/group_chat_detail_text_value" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:background="@color/text_shadow_color_light" />

        <RelativeLayout
            android:id="@+id/clear_chat_history"
            style="@style/rcs_list_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/clear_chat_history"
                android:textColor="@color/group_chat_detail_text"
                android:textSize="18sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/leaveGroupChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:text="@string/leave_group_chat" />
    </LinearLayout>

</ScrollView>
