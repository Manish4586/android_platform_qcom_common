<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/vcard_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp" >

            <LinearLayout
                android:id="@+id/vcard_main_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/vcard_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vcard_name" />

                <TextView
                    android:id="@+id/vcard_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vcard_number" />
            </LinearLayout>

            <ImageView
                android:id="@+id/vcard_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/vcard_main_info"
                android:src="@drawable/rcs_ic_group_chat_photo" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <RelativeLayout
            android:id="@+id/vcard_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp" >

            <TextView
                android:id="@+id/vcard_other_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vcard_other_number"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/other_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vcard_other_number"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <RelativeLayout
            android:id="@+id/vcard_botton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp" >

            <TextView
                android:id="@+id/vcard_compony"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vcard_compony_info"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/vcard_addre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vcard_compony"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/vcard_compony_addre" />

            <TextView
                android:id="@+id/vcard_com_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vcard_addre"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/vcard_compony_name" />

            <TextView
                android:id="@+id/vcard_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vcard_com_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/vcard_compony_position" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
