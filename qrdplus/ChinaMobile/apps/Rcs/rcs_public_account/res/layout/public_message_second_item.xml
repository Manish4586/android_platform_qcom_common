<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_rec_public_second_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/message_image_second"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        android:scaleType="center"
        android:src="@drawable/public_account" />

    <TextView
        android:id="@+id/message_title_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/second_top_left_cb"
        android:layout_toLeftOf="@+id/message_image_second"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>