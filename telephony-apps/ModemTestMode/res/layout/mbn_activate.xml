<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:text="@string/current_config"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mbn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/mbn_validate"
            android:layout_width="162dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:text="@string/mbn_validate"
            android:textColor="#CCFFFFFF"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:text="@string/choose_config_hit"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#545759" />

    <ListView
        android:id="@+id/meta_info_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="left|center_vertical"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="27dp" >

        <Button
            android:id="@+id/exit"
            android:layout_width="142dp"
            android:layout_height="48dp"
            android:text="@string/exit"
            android:textColor="#CCFFFFFF"
            android:textSize="18sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/activate"
            android:layout_width="142dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:text="@string/activate"
            android:textColor="#CCFFFFFF"
            android:textSize="18sp"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>
