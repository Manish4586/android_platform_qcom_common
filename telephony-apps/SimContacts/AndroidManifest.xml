<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qualcomm.simcontacts" android:sharedUserId="android.uid.system">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission
        android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission
        android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission
        android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission
        android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <application
        android:label="@string/app_name" android:process="com.qualcomm.telephony">
       <receiver android:name="SimStateReceiver">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.SIM_STATE_CHANGED"/>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="org.codeaurora.intent.action.ACTION_SIM_REFRESH_UPDATE"/>
            </intent-filter>
        </receiver>

        <service
            android:name=".SimAuthenticateService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/sim_authenticator" />
        </service>
        <service
            android:name=".PhoneAuthenticateService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
                <meta-data android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/phone_authenticator" />
        </service>

        <service
            android:name=".SimSyncService"
            android:exported="true">
            <intent-filter>
                <action
                    android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sim_sync_adapter" />
        </service>

        <service
            android:name=".PhoneSyncService"
            android:exported="true">
            <intent-filter>
                <action
                    android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/phone_sync_adapter" />
        </service>

        <service  android:name=".SimContactsService" />
    </application>
</manifest>
