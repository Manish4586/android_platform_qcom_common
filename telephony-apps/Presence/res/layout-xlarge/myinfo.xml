<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

<!--  Section Heading: Personal Info-->
  <TextView
      android:text="@string/personalinfotext"
      android:textSize="25sp"
      android:textColor="#ffffff"
      android:background="#717171"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1"/>

<!--  Sub Section: My Number-->
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">
      <TextView
          android:text="@string/myNumtext"
          android:textSize="20dip"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"/>
      <EditText
          android:id="@+id/myNumValue"
          android:layout_height="fill_parent"
          android:layout_width="fill_parent"
          android:layout_weight="1"
          android:lines="1"/>

  </LinearLayout>

<!--  Sub Section: URI1-->
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">
      <TextView
          android:text="@string/uri1text"
          android:textSize="20dip"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"/>
      <EditText
          android:id="@+id/uri1Value"
          android:layout_height="fill_parent"
          android:layout_width="fill_parent"
          android:layout_weight="1"
          android:lines="1"/>

  </LinearLayout>

<!--  Sub Section: URI2-->
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">
      <TextView
          android:text="@string/uri2text"
          android:textSize="20dip"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"/>
      <EditText
          android:id="@+id/uri2Value"
          android:layout_height="fill_parent"
          android:layout_width="fill_parent"
          android:layout_weight="1"
          android:lines="1"/>

  </LinearLayout>

  <!--  Sub Section: Basic status-->
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">
      <TextView
          android:text="@string/basicstatustext"
          android:textSize="20dip"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"/>
      <Spinner
          android:id="@+id/basicStatusSpinner"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"
          android:entries="@array/basicstatuslist"/>

  </LinearLayout>



<!--  Section Heading: Service Description-->
  <TextView
      android:text="@string/serviceDescriptiontext"
      android:textSize="25sp"
      android:textColor="#ffffff"
      android:background="#717171"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1"/>

<!--  Sub Section: DESCRIPTION-->
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">
      <TextView
          android:text="@string/descriptiontext"
          android:textSize="20dip"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"/>
      <EditText
          android:id="@+id/descriptionValue"
          android:maxLength="31"
          android:layout_height="fill_parent"
          android:layout_width="fill_parent"
          android:layout_weight="1"
          android:lines="1"/>
  </LinearLayout>

<!--  Sub Section: VER-->
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">
      <TextView
          android:text="@string/vertext"
          android:textSize="20dip"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"/>
      <EditText
          android:id="@+id/verValue"
          android:maxLength="7"
          android:layout_height="fill_parent"
          android:layout_width="fill_parent"
          android:layout_weight="1"
          android:lines="1"/>
  </LinearLayout>

<!--  Sub Section: SERVICE ID-->
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">
      <TextView
          android:text="@string/serviceIdtext"
          android:textSize="20dip"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"/>
      <EditText
          android:id="@+id/serviceIdValue"
          android:maxLength="63"
          android:layout_height="fill_parent"
          android:layout_width="fill_parent"
          android:layout_weight="1"
          android:lines="1"/>
  </LinearLayout>

<!--  Section Heading: Service Capabilities-->
  <TextView
      android:text="@string/servicecaptext"
      android:textSize="25sp"
      android:textColor="#ffffff"
      android:background="#717171"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1"/>


<!--  Sub Section: AUDIO-->
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">
      <TextView
          android:text="@string/isAudioSupportedtext"
          android:textSize="20dip"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"/>
      <Spinner
          android:id="@+id/audiospinner"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"
          android:entries="@array/servcaplist"/>
  </LinearLayout>

<!--  Sub Section: VIDEO-->
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">
      <TextView
          android:text="@string/isVideoSupportedtext"
          android:textSize="20dip"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"/>
      <Spinner
          android:id="@+id/videospinner"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1"
          android:entries="@array/servcaplist"/>
  </LinearLayout>


  <!--  Buttons layout-->
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">
      <Button
          android:id="@+id/ok"
          android:text="@string/oktext"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"/>
      <Button
          android:id="@+id/cancel"
          android:text="@string/canceltext"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"/>
  </LinearLayout>

</LinearLayout>
</ScrollView>
