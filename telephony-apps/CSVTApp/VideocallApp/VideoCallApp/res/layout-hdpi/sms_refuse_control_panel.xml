<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:VTScreen="http://schemas.android.com/apk/res/com.borqs.videocall"
	android:id="@+id/sms_refuse_control_panel"
	android:layout_width="fill_parent"
	android:layout_height="38dp"
	android:orientation="vertical"
	>
	<ImageView android:id="@+id/line_bottom"
			 android:layout_width="fill_parent"
			 android:layout_height="2dp"
		android:background="@drawable/cmcc_phone_line">
		</ImageView>
		<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="35dp"
		android:orientation="horizontal">
		<CheckBox android:id="@+id/chk_view_sms_refuse_content"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:layout_marginLeft="5dp"	/>
		<TextView android:id="@+id/txt_sms_choose_refuse_reason"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:textColor="#7e7e7e"
			android:textSize="14dp"
			android:layout_marginLeft="45dp"
			android:layout_marginTop="10dp"
	        android:text="@string/rejectWithSMSContent"
	        />
	     <ImageButton android:id="@+id/btn_sms_choose_refuse_reason"
	       android:layout_width="35dp"
	       android:layout_height="35dp"
	       android:layout_marginLeft="20dp"
	     android:background="@drawable/spinner_bkg_selector"
	     android:layout_alignParentRight="true">

	     </ImageButton>
     </RelativeLayout>
</LinearLayout>
