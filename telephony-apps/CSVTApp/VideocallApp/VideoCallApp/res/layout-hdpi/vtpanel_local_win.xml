<com.borqs.videocall.VTPanelLocalWindow
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:VTScreen="http://schemas.android.com/apk/res/com.borqs.videocall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    VTScreen:left_lock_connecting="0dp"
    VTScreen:top_lock_connecting="60dp"
    VTScreen:height_lock_connecting="261dp"
    VTScreen:width_lock_connecting="320dp"

    VTScreen:left_unlock_connecting="0dp"
    VTScreen:top_unlock_connecting="60dp"
    VTScreen:height_unlock_connecting="261dp"
    VTScreen:width_unlock_connecting="320dp"

    VTScreen:left_local="0dp"
    VTScreen:top_local="60dp"
    VTScreen:height_local="261dp"
    VTScreen:width_local="320dp"

    VTScreen:left_remote="213dp"
    VTScreen:top_remote="230dp"
    VTScreen:height_remote="85dp"
    VTScreen:width_remote="105dp"

    VTScreen:left_keypad_local="0dp"
    VTScreen:top_keypad_local="60dp"
    VTScreen:height_keypad_local="261dp"
    VTScreen:width_keypad_local="320dp"

    VTScreen:left_keypad_remote="213dp"
    VTScreen:top_keypad_remote="230dp"
    VTScreen:height_keypad_remote="85dp"
    VTScreen:width_keypad_remote="105dp">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/frame_layout_local_win"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp"
        android:background="#161719">
    <TextureView android:id="@+id/_local_surface"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <ImageView android:id="@+id/surface_anim_photo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/camera_control"
        android:src="@drawable/camera_on"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
	    android:focusable="false"
        android:layout_alignBottom="@+id/_local_surface"
        android:layout_alignRight="@+id/_local_surface" />

    </RelativeLayout>

</com.borqs.videocall.VTPanelLocalWindow>
