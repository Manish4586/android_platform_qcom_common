<resources>
    <!-- Base application theme is the default theme. -->
    <style name="CallTitleSytle_A">
        <item name="android:textSize">18px</item>
        <item name="android:textColor">#00ffff</item>
    </style>

	<style name="CallNameStyle_A">
        <item name="android:textSize">24px</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="CallPhoneNumberStyle_A">
        <item name="android:textSize">14px</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:maxWidth">200dip</item>
    </style>
    <style name="ThemeDialogAlert" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="BlackTheme" parent="android:Theme.Black">
	<item name="android:windowBackground">@drawable/cmcc_phone_vtcall_plate_bg</item>
    </style>
    <style name="TextAppearanceNotification" parent="@android:style/TextAppearance" >
        <item name="android:textColorLink">?android:textColorLink</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- Preference Style for the phone number preferences -->
    <style name="EditPhoneNumberPreference">
        <item name="enableButtonText">@string/enable</item>
        <item name="disableButtonText">@string/disable</item>
        <item name="changeNumButtonText">@string/change_num</item>
        <item name="confirmMode">activation</item>
    </style>

</resources>
