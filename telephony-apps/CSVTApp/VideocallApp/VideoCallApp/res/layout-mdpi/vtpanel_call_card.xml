<!-- Call card hold call related information -->
<com.borqs.videocall.VTPanelCallCard	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:VTScreen="http://schemas.android.com/apk/res/com.borqs.videocall"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:orientation="vertical"


    VTScreen:left_local="3dp"
    VTScreen:top_local="0dp"
    VTScreen:height_local="50dp"
    VTScreen:width_local="207dp"

    VTScreen:left_remote="3dp"
    VTScreen:top_remote="0dp"
    VTScreen:height_remote="50dp"
    VTScreen:width_remote="207dp"

    VTScreen:left_keypad_local="3dp"
    VTScreen:top_keypad_local="0dp"
    VTScreen:height_keypad_local="50dp"
    VTScreen:width_keypad_local="207dp"

    VTScreen:left_keypad_remote="3dp"
    VTScreen:top_keypad_remote="0dp"
    VTScreen:height_keypad_remote="50dp"
    VTScreen:width_keypad_remote="207dp"


    VTScreen:left_remote_only="200dp"
    VTScreen:top_remote_only="350dp"
    VTScreen:height_remote_only="185dp"
    VTScreen:width_remote_only="300dp">



    <RelativeLayout android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
	<TextView android:id="@+id/vt_card_title"
		android:textSize="12dp"
		android:textColor="#ffffff"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"

        android:layout_marginTop="3dp"/>
	<!-- Name (or the phone number, if we don't have a name to display). -->
	<TextView android:id="@+id/vt_name"
			android:textSize="11dp"
		android:textColor="#a6ffa2"
		android:layout_width="90dp"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:layout_marginTop="3dp" />
	<TextView android:id="@+id/vt_phone_number"
		android:textSize="11dp"
		android:textColor="#c0c0c0"
		android:layout_width="117dp"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:layout_marginTop="27dp" />
	<ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/callcard_divider"
        android:layout_marginTop="43dp">
    </ImageView>
    </RelativeLayout>

</com.borqs.videocall.VTPanelCallCard>
