<com.borqs.videocall.VTPanelFallBackPanel
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:VTScreen="http://schemas.android.com/apk/res/com.borqs.videocall"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"

	VTScreen:left_lock_connecting="3dp"
	VTScreen:top_lock_connecting="3dp"
	VTScreen:height_lock_connecting="83dp"
	VTScreen:width_lock_connecting="300dp"

	VTScreen:left_unlock_connecting="3dp"
	VTScreen:top_unlock_connecting="3dp"
	VTScreen:height_unlock_connecting="83dp"
	VTScreen:width_unlock_connecting="300dp" >


<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center_vertical"
	android:background="@null">

	<LinearLayout android:layout_width="67dp"
		android:layout_height="67dp"
		android:background="@drawable/cmcc_phone_voicecall_switch_video">
	<ImageView  android:id="@+id/call_card_picture"
		android:layout_width="67dp"
		android:layout_height="67dp"
		android:src="@drawable/picture_unknown"/>
		</LinearLayout>
	<!-- Caller Info -->
	<LinearLayout android:layout_width="93dp"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginLeft="10dp">
	<TextView android:id="@+id/popup_caller_number"
			android:layout_width="93dp"
			android:layout_height="wrap_content"
			android:textColor="#ffffff"
			android:singleLine="true"
			android:textSize="12dp"/>
	<TextView android:id="@+id/popup_caller_location"
			android:layout_width="140dp"
			android:layout_height="wrap_content"
			android:textColor="#ffffff"
			android:singleLine="true"
			android:textSize="18dp"/>
	<TextView android:id="@+id/popup_caller_name"
			android:layout_width="93dp"
			android:layout_height="wrap_content"
			android:textColor="#ffffff"
			android:singleLine="true"
			android:textSize="12dp"/>

		<TextView android:id="@+id/popup_call_title"
			android:layout_width="93dp"
			android:layout_height="wrap_content"
			android:textColor="#ffffff"
			android:singleLine="true"
			android:textSize="10dp"/>


	</LinearLayout>
</LinearLayout>
<ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/callcard_divider"
        android:layout_marginTop="3dp">
    </ImageView>
</com.borqs.videocall.VTPanelFallBackPanel>
